<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#F4FA58"
        android:orientation="vertical">
        <TextView
            android:id="@+id/wellcome"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="WELLCOME"
            android:textSize="50sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_android_black_80dp"
            android:background="@android:color/tertiary_text_dark">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/tertiary_text_dark">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ĐĂNG NHẬP"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <EditText
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_account_circle_black_30dp"
            android:ems="10"
            android:hint="email/sđt"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="italic"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="quên mật khẩu"
            android:layout_marginLeft="275dp"
            android:layout_marginTop= "0.5dp"/>
        <EditText
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:hint="password"
            android:ems="10"
            android:inputType="textPassword"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textColor="@android:color/background_dark"
            android:drawableLeft="@drawable/ic_build_black_30dp">
        </EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="05dp">
            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:background="#F4FA58"
                android:text="ĐĂNG KÝ"
                android:textSize="15sp"
                android:textColor="@android:color/background_dark"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="#F4FA58"
                android:text="ĐĂNG NHẬP"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:textColor="@android:color/background_dark"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>